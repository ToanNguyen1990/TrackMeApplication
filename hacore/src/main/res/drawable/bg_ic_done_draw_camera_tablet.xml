<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/bg_arrow_selected_dialog_create_user">

    <item >
        <shape>
            <gradient
                android:endColor="@color/colorBgSettingCameraMb"
                android:startColor="@color/colorBgSettingCameraMb" />
            <corners android:radius="@dimen/app_spacing_xlarge" />
        </shape>
    </item>

    <item
        android:width="@dimen/app_spacing_height"
        android:height="@dimen/app_spacing_height"
        android:drawable="@drawable/icon_done_draw"
        android:gravity="center"
        android:state_pressed="false">
        <shape>
            <corners android:radius="@dimen/app_spacing_xlarge" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/app_spacing_xlarge" />
            <gradient
                android:endColor="@color/color_bg_nvr_menu_new_control"
                android:startColor="@color/color_bg_nvr_menu_new_control" />
        </shape>
    </item>

</ripple>
