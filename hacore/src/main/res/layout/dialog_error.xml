<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/all_style_dialog"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_medium"
    android:paddingTop="@dimen/margin_large"
    android:paddingEnd="@dimen/margin_medium"
    android:paddingBottom="@dimen/margin_large">

    <TextView
        android:id="@id/text_title"
        style="@style/AppTheme.Dialog.Title"
        android:layout_marginTop="@dimen/margin"
        tools:text="This is an error message" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/button_ok"
        style="@style/CoreTheme.Button.Primary"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_large"
        android:gravity="center"
        android:paddingStart="@dimen/margin_x10"
        android:paddingEnd="@dimen/margin_x10"
        android:text="@string/dialog_ok" />

</LinearLayout>