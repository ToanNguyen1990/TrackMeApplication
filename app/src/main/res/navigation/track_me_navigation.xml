<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/track_me_navigation"
    app:startDestination="@id/splashFragment">

    <action
        android:id="@+id/goToSplashFragment"
        app:destination="@id/splashFragment" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="net.nvtoan.trackme.app.ui.splashscreen.SplashFragment"
        tools:layout="@layout/fragment_splash" >

        <action
            android:id="@+id/goToHomeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="net.nvtoan.trackme.app.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" />
</navigation>