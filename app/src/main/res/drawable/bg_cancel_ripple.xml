<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="#A6FFFFFF"
    tools:targetApi="lollipop">
    <item
        android:id="@android:id/mask"
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhiteTransparent40" />
            <corners
                android:bottomLeftRadius="@dimen/app_spacing_mini"
                android:bottomRightRadius="@dimen/app_spacing_mini"
                android:topLeftRadius="@dimen/app_spacing_mini"
                android:topRightRadius="@dimen/app_spacing_mini" />

            <stroke
                android:width="1dp"
                android:color="@color/colorWhiteTransparent40" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/app_spacing_mini"
                android:bottomRightRadius="@dimen/app_spacing_mini"
                android:topLeftRadius="@dimen/app_spacing_mini"
                android:topRightRadius="@dimen/app_spacing_mini" />

            <stroke
                android:width="1dp"
                android:color="@color/colorWhiteTransparent40" />
        </shape>
    </item>
</ripple>