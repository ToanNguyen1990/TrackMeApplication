<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="#A62379FF"
    tools:targetApi="lollipop">
    <item android:id="@android:id/mask" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#2379FF" />
            <corners
                android:bottomLeftRadius="@dimen/app_spacing_mini"
                android:bottomRightRadius="@dimen/app_spacing_mini"
                android:topLeftRadius="@dimen/app_spacing_mini"
                android:topRightRadius="@dimen/app_spacing_mini" />

            <stroke android:color="#2379FF" android:width="1dp" />
        </shape>
    </item>
    <item  android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/app_spacing_mini"
                android:bottomRightRadius="@dimen/app_spacing_mini"
                android:topLeftRadius="@dimen/app_spacing_mini"
                android:topRightRadius="@dimen/app_spacing_mini" />

            <stroke android:color="#2379FF" android:width="1dp" />
        </shape>
    </item>
</ripple>